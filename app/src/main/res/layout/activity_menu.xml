<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sandysetiawan.sandysetiawan_1202154194_modul2.Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scrollbars="vertical">


        <ImageView
            android:id="@+id/foto1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dip"
            android:contentDescription="Ajinomoto"
            android:src="@drawable/ajinomoto" />

        <TextView
        android:id="@+id/menu1"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:layout_toRightOf="@id/foto1"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:text="Ajinomoto"
        android:textSize="30sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            android:layout_toRightOf="@id/foto1"
            android:layout_below="@id/menu1"
            android:text="Harga Rp. 300.000"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/foto2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dip"
            android:layout_below="@id/foto1"
            android:contentDescription="sasa"
            android:src="@drawable/sasa"/>

        <TextView
            android:id="@+id/menu2"
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:layout_below="@id/foto1"
            android:layout_toRightOf="@id/foto2"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:text="Sasa"
            android:textSize="30sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            android:layout_toRightOf="@id/foto2"
            android:layout_below="@id/menu2"
            android:text="Harga Rp. 150.000"
            android:textSize="19sp" />






    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
